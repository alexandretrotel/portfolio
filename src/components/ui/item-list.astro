---
type Item = {
  name: string;
  summary: string;
  url?: string;
};

const {
  items,
  linkTarget = "_blank",
  linkRel = "noreferrer",
} = Astro.props as {
  items: Item[];
  linkTarget?: string;
  linkRel?: string;
};
---

<ul class="space-y-5">
  {items.map((item) => (
    <li>
      {item.url ? (
        <a
          class="group block space-y-1 text-muted-foreground transition-colors hover:text-foreground"
          href={item.url}
          target={linkTarget}
          rel={linkRel}
        >
          <div class="flex items-center gap-2">
            <span class="font-medium text-sm">{item.name}</span>
          </div>
          <p class="text-sm leading-relaxed text-muted-foreground">{item.summary}</p>
        </a>
      ) : (
        <div class="block space-y-1 text-muted-foreground">
          <div class="flex items-center gap-2">
            <span class="font-medium text-sm text-foreground">{item.name}</span>
          </div>
          <p class="text-sm leading-relaxed text-muted-foreground">{item.summary}</p>
        </div>
      )}
    </li>
  ))}
</ul>
