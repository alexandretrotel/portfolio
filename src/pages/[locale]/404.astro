---
import Button from "@/components/ui/button.astro";
import { defaultLocale, type Locale, locales } from "@/i18n/locales";
import { getTranslations } from "@/i18n/translations";
import { getLocalizedPath } from "@/i18n/utils";
import Layout from "@/layouts/main.astro";

export function getStaticPaths() {
  return locales.map((l) => ({ params: { locale: l } }));
}

export const prerender = true;

const locale = (Astro.params.locale as Locale) ?? defaultLocale;
const t = getTranslations(locale);
---

<Layout title={t.notFound.title}>
  <div class="flex h-full flex-col items-center justify-center gap-4 py-32">
    <div class="flex flex-col items-center justify-center">
      <p class="text-muted-foreground text-base">{t.notFound.message}</p>
    </div>
    <Button variant="ghost" class="active:scale-90 active:bg-accent">
      <a
        href={getLocalizedPath(locale, "/")}
        class="text-sm"
        onclick="history.back(); return false;"
        >{t.notFound.goBack}</a
      >
    </Button>
  </div>
</Layout>
